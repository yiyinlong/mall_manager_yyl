<?xml version="1.0" encoding="UTF-8" ?>
<!DOCTYPE mapper
PUBLIC "-//mybatis.org//DTD Mapper 3.0//EN"
"http://mybatis.org/dtd/mybatis-3-mapper.dtd">
<mapper namespace="com.atguigu.mapper.SpuMapper">
	
		<select id="select_spu_list" resultType="com.atguigu.bean.T_MALL_PRODUCT">
		
		select * from t_mall_product where flbh2 = #{class_2_id} and pp_id = #{pp_id}
		
		</select>

	<!-- 想要返回一个主键,所以还要加入字段 -->
	<insert id="insert_spu" useGeneratedKeys="true" keyColumn="id" keyProperty="id" >
	insert into t_mall_product(
	shp_mch,
	shp_tp,
	flbh1,
	flbh2,
	pp_id,
	shp_msh)
	values(
	#{shp_mch},
	#{shp_tp},
	#{flbh1},
    #{flbh2},
	#{pp_id},
	#{shp_msh}
	)
	</insert>
	
	
	<insert id="insert_img">
		insert into t_mall_product_image(shp_id,url)
		values
		<foreach collection="list_image" item="image" separator=",">
			(#{spu_id},#{image})
		
		</foreach>
	</insert>
</mapper>